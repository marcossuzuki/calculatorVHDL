library IEEE;
use IEEE.STD_LOGIC_1164.all;
USE IEEE.std_logic_arith.all;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

entity juntar is
	
    port (
          clock_in  : in  std_logic;
          enable    : in  std_logic;
          output    : out std_logic_vector(16 downto 0)
         );
end entity juntar;

architecture juntar_imp of juntar is
    signal count	: std_logic_vector(16 downto 0) := (others=>'0');
    constant max	: std_logic_vector(16 downto 0) := "00010011100001111";
begin 
    p1:process(clock_in) is begin
			if (clock_in'event and clock_in='1' and enable = '1') then
				count <= count + 1;
				if(count = max) then
					count <= (others=>'0');
				end if;
				output <= count;
			end if;
    end process ;
end architecture juntar_imp;
