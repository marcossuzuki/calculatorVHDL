module Counter_vlg_vec_tst();
// constants                                           
// general purpose registers
reg clock;
reg enable;
reg [7:0] initValue;
reg stop;
// wires                                               
wire finished;
wire [7:0] output;

wire sampler;                             

// assign statements (if any)                          
Counter i1 (
// port map - connection between master ports and signals/registers   
	.clock(clock),
	.enable(enable),
	.finished(finished),
	.initValue(initValue),
	.\output (output),
	.stop(stop)
);

// clock
always
begin
	clock = 1'b0;
	clock = #10000 1'b1;
	#10000;
end 

// enable
initial
begin
	enable = 1'b1;
end 
// initValue[ 7 ]
initial
begin
	initValue[7] = 1'b0;
end 
// initValue[ 6 ]
initial
begin
	initValue[6] = 1'b1;
end 
// initValue[ 5 ]
initial
begin
	initValue[5] = 1'b0;
end 
// initValue[ 4 ]
initial
begin
	initValue[4] = 1'b0;
end 
// initValue[ 3 ]
initial
begin
	initValue[3] = 1'b0;
end 
// initValue[ 2 ]
initial
begin
	initValue[2] = 1'b0;
end 
// initValue[ 1 ]
initial
begin
	initValue[1] = 1'b0;
end 
// initValue[ 0 ]
initial
begin
	initValue[0] = 1'b0;
end 

// stop
initial
begin
	stop = 1'b1;
end 

Counter_vlg_sample_tst tb_sample (
	.clock(clock),
	.enable(enable),
	.initValue(initValue),
	.stop(stop),
	.sampler_tx(sampler)
);

Counter_vlg_check_tst tb_out(
	.finished(finished),
	.output(output),
	.sampler_rx(sampler)
);
endmodule

